<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                    android:orientation="horizontal">
                  <ImageButton
                       android:id="@+id/button1"
                       android:layout_width="400dp"
                       android:layout_height="400dp"
                      android:scaleType="centerCrop"
                       android:onClick="onMainButtonTapped"
                      app:srcCompat="@drawable/item2" />

                  <ImageButton
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                      android:scaleType="centerCrop"
                        app:srcCompat="@drawable/item1" />
               </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/button3"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/item3" />
            <ImageButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/item4"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/button13"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:onClick="onMainButtonTapped"
                    app:srcCompat="@drawable/item2" />

                <ImageButton
                    android:id="@+id/button14"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/item1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/button15"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:scaleType="centerCrop"
                    android:onClick="onMainButtonTapped"
                    app:srcCompat="@drawable/item2" />

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    app:srcCompat="@drawable/item5"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="787dp">

        <Button
            android:id="@+id/icon1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/colorUnderBotton"
            android:text="ホーム"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/colorUnderBottonOnchick"
            android:drawableTop="@drawable/ic_home_black_24dpincolor"
            android:padding="9dp"
            android:gravity="center_vertical|center"
            android:drawableTint="@color/colorUnderBottonOnchick"/>

        <Button
            android:id="@+id/icon2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/colorUnderBotton"
            android:text="出品"
            android:textStyle="bold"
            android:textSize="25dp"
            android:onClick="onMainButtonSell"
            android:drawableTop="@drawable/ic_add_black_24dp"
            android:padding="9dp"
            android:gravity="center_vertical|center" />
        <Button
            android:id="@+id/icon3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/colorUnderBotton"
            android:text="履歴"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableTop="@drawable/ic_shopping_basket_black_24dp"
            android:padding="9dp"
            android:gravity="center_vertical|center" />
        <Button
            android:id="@+id/icon4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@color/colorUnderBotton"
            android:text="チャット"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableTop="@drawable/ic_message_black_24dp"
            android:padding="9dp"
            android:gravity="center_vertical|center" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>